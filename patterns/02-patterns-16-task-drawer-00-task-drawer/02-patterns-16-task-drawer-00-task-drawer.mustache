<div class="content-inverse bg-gray-2">
	<div class="container p-y-3">
		<div class="row">
			{{> patterns-task-drawer-toggle(taskDrawerTarget: "taskDrawer1") }}
		</div>
		<div class="row">
			<div class="col-xs-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2 col-xl-6 col-xl-offset-3 collapse in" id="taskDrawer1" aria-expanded="true">
				<ul class="list-unstyled p-t-3">
					{{> patterns-task-drawer-item(taskComplete: true, task: "Task 1", taskMeta: "Status") }}
					{{> patterns-task-drawer-item(taskIncomplete: true, task: "Task 2", taskMeta: "<a href='#'>Call to Action</a>") }}
					{{> patterns-task-drawer-item(taskIncomplete: true, task: "Task 3", taskMeta: "Embedded <a href='#'>Call to Action</a>") }}
				</ul>
			</div>
		</div>
	</div>
</div>