<form>
	<div class="form-group form-group-spacer">
		<label for="textareaRem">Textarea</label>
		<textarea id="textareaRem" class="form-control" rows="8" cols="10" maxlength="1000" data-charcount="#charCounterRem" placeholder="Enter your message here"></textarea>
		<span id="charCounterRem" class="label-help"></span>
	</div>
</form>

<form>
	<div class="form-group form-group-spacer">
		<label for="textareaMax">Textarea</label>
		<textarea id="textareaMax" class="form-control" rows="8" cols="10" maxlength="500" data-charcount="#charCounterMax" data-chartext="$rem of $max characters remaining" placeholder="Enter your message here"></textarea>
		<span id="charCounterMax" class="label-help"></span>
	</div>
</form>