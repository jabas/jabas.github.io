<div class="container m-t-2">
	<p>CODE: <code>$(document).ready(function() {..}</code></p>
	<p>KBD: <kbd>Alt + Cmd <kbd>Enter</kbd></kbd></p>
	<h5>Preformated Element</h5>
	<pre>$(document).ready(function() {
	$('body').on('shown.bs.modal', '.modal', function(){
		<code>$('[autofocus]', this).focus();</code>
	});
	$('body').on('keydown', '[data-enter-target]', function(event) {
		var keyCode = event.which;
		var $enterTrigger = $(this);
		var $enterTarget = $($enterTrigger.data('enter-target'));
		if(keyCode === 13 && $enterTrigger.is(':focus')){
			$enterTarget.click();
		}
	});
});</pre>
	<h5>.pre-scrollable</h5>
	<pre class="pre-scrollable">$(document).ready(function(){
	$('body').on('click', '[data-scrollto]', function(e){
		e.preventDefault();

		var trigger = $(this);
		var href = trigger.attr('href');
		var data = trigger.data();
		var offset = typeof data.offset !== 'number' ? -12 : data.offset;
		var speed = typeof data.speed !== 'number' ? 500 : data.speed;
		var headerHgt = 0;
		var pos = 0;
		
		if(href.charAt(0) === '#' && href !== '#') {
			history.pushState({}, '', href);
		}else{
			history.pushState({}, '', window.location.pathname);
		}
		
		if(data.scrollto === 'href') {
			data.scrollto = href;
		}

		if(data.scrollto !== 'top') {
			// if header will condense when scrolling, need to account for header-condensed height
			headerHgt = $('.ltnav-logo').height() >= 30 ? $('.header-mylt').outerHeight() - 28 : $('.header-mylt').outerHeight();
			pos = data.scrollto === 'top' ? 0 : $(data.scrollto).offset().top + offset - headerHgt;

			if($(data.scrollto).hasClass('id-offset')) {
				pos = pos + 112;
			}
		}

		$('html, body').animate({ scrollTop: pos }, speed);
	});
});</pre>
</div>