<div class="container">
	<div class="row">
		<div class="col-xs-12 col-md-8 col-md-offset-2">
			<h5>Basic .card-container</h5>
			<div class="card">
				<div class="card-container">
					<p>{{excerpt.long}}</p>
				</div>
			</div>
			<h5>.card-container with .card-row/.card-col</h5>
			<div class="card">
				<div class="card-container">
					<div class="card-row row-xs-baseline">
						<div class="card-col col-xs-12 col-lg-8">
							<h1 class="h2">{{headline.short}}</h1>
						</div>
						<div class="card-col col-xs-12 col-lg-4 text-lg-right">
							<p>{{excerpt.reallyshort}}</p>
						</div>
					</div>
				</div>
			</div>
			<h5>.card-row-block with background utilities</h5>
			<div class="card">
				<div class="card-container">
					<div class="card-row card-row-block">
						<div class="card-col col-xs-12 col-lg-4 bg-gray-10">
							<p>{{excerpt.medium}}</p>
						</div>
						<div class="card-col col-xs-12 col-lg-4 bg-gray-12">
							<p>{{excerpt.reallyshort}}</p>
						</div>
						<div class="card-col col-xs-12 col-lg-4 bg-gray-11">
							<p>{{excerpt.short}}</p>
						</div>
					</div>
				</div>
			</div>
			<h5>.card-row-block with border utilities</h5>
			<div class="card">
				<div class="card-container">
					<div class="card-row card-row-block">
						<div class="card-col col-xs-12 col-lg-4">
							<p>{{excerpt.short}}</p>
						</div>
						<div class="card-col col-xs-12 col-lg-4 b-t b-t-lg-0 b-l-lg">
							<p>{{excerpt.medium}}</p>
						</div>
						<div class="card-col col-xs-12 col-lg-4 b-t b-t-lg-0 b-l-lg">
							<p>{{excerpt.reallyshort}}</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="container content-section">
	<h5>Combined</h5>
	<div class="card">
		<div class="card-container">
			<div class="card-row row-xs-baseline">
				<div class="card-col col-xs-12 col-lg-8">
					<h1 class="h2">{{headline.short}}</h1>
				</div>
				<div class="card-col col-xs-12 col-lg-4 text-lg-right">
					<p>{{excerpt.reallyshort}}</p>
				</div>
			</div>
		</div>
		<div class="card-container b-t">
			<div class="card-row card-row-block">
				<div class="card-col col-xs-12 col-lg-4">
					<p>{{excerpt.medium}}</p>
				</div>
				<div class="card-col col-xs-12 col-lg-4 b-t b-t-lg-0 b-l-lg">
					<p>{{excerpt.short}}</p>
				</div>
				<div class="card-col col-xs-12 col-lg-4 b-t b-t-lg-0 b-l-lg">
					<p>{{excerpt.long}}</p>
				</div>
			</div>
		</div>
	</div>
</div>


