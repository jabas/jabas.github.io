<div class="card">
	<div class="card-block">
		<div class="row p-b-2">
			<div class="col-xs-12 col-sm-8 col-lg-9">
				<h5>Default (closed, default text) {{excerpt.short}}</h5>
			</div>
			<div class="col-xs-12 col-sm-4 col-lg-3">
				<p class="text-sm-right small m-b-0">
					<a data-toggle="collapse" href="#showHideDefault" aria-expanded="false" aria-controls="showHideDefault" data-label-collapsed="Details" data-label-expanded="Hide Details" role="button">
						Details
					</a>
				</p>
			</div>
		</div>
		<div id="showHideDefault" class="collapse fade">
			<hr class="m-t-0"/>
			<p>{{excerpt.long}}</p>
			<p>{{excerpt.long}}</p>
		</div>
	</div>
</div>

<div class="card">
	<div class="card-block">
		<div class="row">
			<div class="col-xs-12">
				<a class="pull-xs-right p-l-grid" data-toggle="collapse" href="#showHidePlus" aria-expanded="false" aria-controls="showHidePlus" data-label-collapsed="<span class='ico-plus'></span><span class='sr-only'>Show Content</span>" data-label-expanded="<span class='ico-minus'></span><span class='sr-only'>Hide Content</span>" role="button">
					<span class="ico-plus"></span><span class="sr-only">Show Content</span>
				</a>
				<h5 class="m-b-2 text-hide-overflow" data-toggle="collapse" data-target="#showHidePlus" aria-expanded="false" role="button">Icons Plus/Minus</h5>
			</div>
		</div>
		<div id="showHidePlus" class="collapse fade">
			<hr class="m-t-0"/>
			<p>{{excerpt.long}}</p>
			<p>{{excerpt.long}}</p>
		</div>
	</div>
</div>

<div class="card">
	<div class="card-block">
		<div class="row">
			<div class="col-xs-12">
				<a class="pull-xs-right p-l-grid" data-toggle="collapse" href="#showHideArrow" aria-expanded="false" aria-controls="showHideArrow" data-label-collapsed="<span class='ico-arrow-down'></span><span class='sr-only'>Show Content</span>" data-label-expanded="<span class='ico-arrow-up'></span><span class='sr-only'>Hide Content</span>" role="button">
					<span class="ico-arrow-down"></span><span class="sr-only">Show Content</span>
				</a>
				<h5 class="m-b-2 text-hide-overflow" data-toggle="collapse" data-target="#showHideArrow" aria-expanded="false" aria-controls="showHideArrow" role="button">Icons Up/Down Arrow - {{excerpt.short}}</h5>
			</div>
		</div>
		<div id="showHideArrow" class="collapse fade">
			<hr class="m-t-0"/>
			<p>{{excerpt.long}}</p>
			<p>{{excerpt.long}}</p>
		</div>
	</div>
</div>