{{> patterns-header-member }}
<main>

	<div class="content-section container">
		<div class="row">
			<div class="col-xs-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">
				<h1 class="h2">Ride for a Reason</h1>
				<p><strong>1</strong> of 50 spots available</p>
			</div>
		</div>
	</div>

	<div class="content-section bg-gray-12 b-t">
		<div class="container">
			<div class="row">
				<div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
					<p class="small m-b-sm">Location</p>
					<p>Cycle Studio 1, Chanhassen</p>
					<p class="small m-b-sm">Participants<a id="adultRequired-ref" href="#adultRequired" aria-describedby="#adultRequired" class="mylt-gray-5">*</a></p>
					<fieldset class="form-group m-b-grid c-inputs-stacked">
						<legend class="sr-only">Participant</legend>
						<label for="participant1" class="c-input c-checkbox">
							<input id="participant1" type="checkbox" checked>
							<span class="c-indicator"></span>
							John
						</label>
						<label for="participant2" class="c-input c-checkbox disabled">
							<input id="participant2" type="checkbox" disabled>
							<span class="c-indicator"></span>
							Cindy
						</label>
						<p class="small m-b-sm text-gray-5">By selecting [John], the roster is now full.</p>
					</fieldset>
					<p class="small m-b-sm">Date</p>
					<p><time datetime="2018-03-18">Sat, Mar 3, 2018</time></p>
					<p class="small m-b-sm">Time</p>
					<p>
						<time class="time-start">7:00</time>
						<span class="time-to">to</span>
						<time class="time-end">11:00<span class="time-ampm"> AM</span></time>
					</p>
					<table class="table table-sm">
						<tr>
							<th>Total</th>
							<td class="text-xs-right"><strong>$20.00</strong> <span class="micro">(plus tax)</span></td>
						</tr>
					</table>
					<div class="btn-wrap text-xs-right">
						<button class="btn btn-primary">Next</button>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="content-section container p-t-2">
		<div class="row">
			<div class="col-xs-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">
				<p id="adultRequired" class="small">*An adult is required in order to register for this event. Please select at least 1 participant over the age of 18. <a href="#adultRequired-ref" class="sr-only sr-only-focusable">Return to participant options.</a></p>
				<p>Questions about this event? Please call the club at <a href="#0">[phone number]</a>.</p>
			</div>
		</div>
	</div>
</main>
{{> patterns-mylt-footer }}
