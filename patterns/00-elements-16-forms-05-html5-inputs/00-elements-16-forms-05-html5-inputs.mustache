<form>
	<div class="form-group"><label for="in">Number input</label> <input type="number" id="in" class="form-control" min="0" max="10" value="5"></div>
	<div class="form-group"><label for="it">Telephone input</label> <input type="tel" id="it" class="form-control"></div>
	<div class="form-group"><label for="ir">Range input</label> <input type="range" id="ir" class="form-control" value="10"></div>
	<div class="form-group"><label for="idd">Date input</label> <input type="date" id="idd" class="form-control" value="1970-01-01"></div>
	<div class="form-group"><label for="idm">Month input</label> <input type="month" id="idm" class="form-control" value="1970-01"></div>
