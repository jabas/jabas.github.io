{{> templates-tmhub-header }}
<main>
	<div class="container p-t-2">
		<h1 class="h2 h-static m-b-2"><span class="text-gray-8">Chanhassen&nbsp;|</span> Club Hours</h1>
	</div>
	<form>
		<div class="bg-gray-12 b-t p-y-grid">
			<div class="container">
				<div class="row">
					<div class="col-xs-12 col-lg-10 col-lg-offset-1">
						<label for="editEachDay" class="c-input c-radio">
							<input id="editEachDay" name="editRadio" type="radio" value="each" checked>
							<span class="c-indicator"></span>
							 Edit Each Day
						</label>
						<label for="editAllDays" class="c-input c-radio">
							<input id="editAllDays" name="editRadio" type="radio" value="all">
							<span class="c-indicator"></span>
							Edit All Days
						</label>
						<button class="btn btn-link align-baseline">Reset All</button>
					</div>
				</div>
			</div>
		</div>
		<div id="editView" class="container">
			<div class="row">
				<div class="col-xs-12 col-lg-10 col-lg-offset-1">
					<div id="eachDayCollapse" class="collapse fade in">
						{{> templates-locations-week-list }}
					</div>
					<div id="allDaysCollapse" class="collapse fade">
						{{> templates-locations-single-day }}
					</div>
					<div class="content-section">
						<div class="btn-wrap">
							<button class="btn btn-primary">Submit</button>
							<button class="btn btn-link">Cancel</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</form>
</main>
{{> templates-tmhub-footer }}